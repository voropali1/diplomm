<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/item_MCV"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/studyset_RL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/studyset_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10sp"
                android:layout_toLeftOf="@+id/delete_studyset_BTN"
                android:text="@string/title"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/amount_of_words"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/studyset_title"
                android:text="@string/amount_of_words"
                android:textColor="@color/darkGrey"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/delete_studyset_BTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@null"
                app:srcCompat="@drawable/ic_delete_black_24dp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <include layout="@layout/line"/>
</RelativeLayout>

