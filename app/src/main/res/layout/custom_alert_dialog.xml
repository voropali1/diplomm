<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/alert_message_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/do_you_want_to_delete"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:textColor="@color/darkColor"
        android:textSize="17sp">

    </TextView>

    <TextView
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/alert_message_TV"
        android:id="@+id/name_of_deleting_item_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/darkColor"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_below="@+id/name_of_deleting_item_TV"
        android:id="@+id/alertdialog_btns_RL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <Button
            android:id="@+id/delete_item_BTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:backgroundTint="#D32F2F"
            android:text="Delete" />

        <Button
            android:id="@+id/cancel_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/blue"
            android:text="Cancel" />
    </RelativeLayout>

</RelativeLayout>